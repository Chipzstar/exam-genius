model User {
  id                         Int                       @id @default(autoincrement())
  clerkId                    String                    @unique @default("")
  clerk_id                   String                    @unique @default("")
  email                      String                    @unique
  full_name                  String
  firstname                  String
  lastname                   String
  year                       String?
  role                       String?
  stripe_customer_id         String?                   @unique
  stripe_subscription_id     String?
  stripe_subscription_status StripeSubscriptionStatus?
  courses                    Course[]
  papers                     Paper[]
}

enum StripeSubscriptionStatus {
  incomplete
  incomplete_expired
  trialing
  active
  past_due
  canceled
  unpaid
  paused
}
